    <!--    toolbar主题-->
    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--        toolbar背景色-->
        <item name="android:background">@color/colorPrimary</item>
        <!--        toolbar主要文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--        toolbar副标题文字颜色-->
        <item name="subtitleTextColor">@android:color/white</item>
        <!--        解决Toolbar的Title与NavigationIcon距离过宽-->
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!--    全屏dialog-->
    <style name="DialogFullscreen" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <!--        不要窗口标题-->
        <item name="android:windowNoTitle">true</item>
        <!--        状态栏颜色，默认使用colorPrimaryDark-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!--        设置默认Dialog动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--        设置CheckBox选中的颜色-->
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>
